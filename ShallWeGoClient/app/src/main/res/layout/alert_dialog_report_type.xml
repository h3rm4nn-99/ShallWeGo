<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:padding="20dp"
              android:layout_height="match_parent" android:baselineAligned="false">

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/buttonStop"
                  android:layout_weight="0.25"
                  android:orientation="vertical"
                  android:layout_gravity="center">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_place_white_48dp"/>

        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:layout_gravity="center"
                                                               android:text="Fermata"/>
    </LinearLayout>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/buttonLine"
                  android:layout_weight="0.25"
                  android:orientation="vertical"
                  android:layout_gravity="center">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_directions_bus_white_48dp"/>

        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:layout_gravity="center"
                                                               android:text="Linea"/>
    </LinearLayout>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/buttonCompany"
                  android:layout_weight="0.25"
                  android:orientation="vertical"
                  android:layout_gravity="center">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_business_white_48dp"/>

        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:layout_gravity="center"
                                                               android:text="Azienda"/>
    </LinearLayout>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/buttonTemporaryEvent"
                  android:layout_weight="0.25"
                  android:orientation="vertical"
                  android:layout_gravity="center">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_info_white_48dp"/>

        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:layout_gravity="center"
                                                               android:text="Avviso"/>
    </LinearLayout>

</LinearLayout>