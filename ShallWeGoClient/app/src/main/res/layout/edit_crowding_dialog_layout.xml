<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:textSize="12pt"
                                                           android:textStyle="bold"
                                                           android:padding="10pt"
                                                           android:gravity="center"
                                                           android:layout_gravity="center"
                                                           android:text="Quanto Ã¨ affollata questa fermata adesso?"/>

    <com.google.android.material.slider.Slider android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:id="@+id/newCrowdingSlider"
                                               android:layout_margin="12pt"
                                               android:valueFrom="0.0"
                                               android:valueTo="2.0"
                                               android:stepSize="1.0"/>

    <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/newCrowdingValue"
                                                           android:textSize="10pt"
                                                           android:textStyle="bold"
                                                           android:padding="12pt"
                                                           android:gravity="center"
                                                           android:layout_gravity="center"
                                                           android:text="Non affollata"/>

</LinearLayout>