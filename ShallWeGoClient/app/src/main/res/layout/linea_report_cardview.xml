<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
                                                       android:id="@+id/cardViewLinea"
                                                       android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="LINEA "
                      android:id="@+id/linea_text"
                      android:paddingLeft="15pt"
                      android:textSize="12pt"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/linea_identifier"
                      android:textSize="12pt"
                      android:textStyle="bold"
                      android:layout_toRightOf="@id/linea_text"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="15pt"
                          android:layout_below="@id/linea_identifier"
                          android:orientation="horizontal"
                          android:paddingLeft="15pt"
                          android:id="@+id/linear_layout_report_linea_date">

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/ic_schedule_white_24dp"
                           android:layout_marginRight="12pt"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/linea_date_reported"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_below="@id/linear_layout_report_linea_date"
                          android:layout_marginTop="10pt"
                          android:paddingLeft="15pt"
                          android:orientation="horizontal"
                          android:id="@+id/linear_layout_report_linea_compagnia">

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/ic_business_white_24dp"
                           android:layout_marginRight="12pt"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/linea_compagnia"/>
            </LinearLayout>

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_below="@id/linear_layout_report_linea_compagnia"
                       android:id="@+id/dettagliLinea"
                       android:paddingRight="15pt"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/ic_double_arrow_white_24dp"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>