<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:baselineAligned="false">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/provinciaAnotherDestination"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:hint="Provincia">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/provinciaAnotherDestinationEditText"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/comuneAnotherDestination"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:hint="Comune">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/comuneAnotherDestinationEditText"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/furtherDetailsAnotherDestination"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:hint="Nome Destinazione?">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/furtherDetailsAnotherDestinationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>