<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_stop_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StopReportActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingTop="50dp">

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:startIconDrawable="@drawable/ic_edit_white_24dp"
                                                               android:id="@+id/stopName"
                                                               app:errorEnabled="true"
                                                               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                               android:hint="Nome fermata">

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:paddingStart="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:startIconDrawable="@drawable/ic_add_location_alt_white_24dp"
                                                               android:id="@+id/location"
                                                               android:layout_marginBottom="12pt"
                                                               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                               android:hint="Posizione">

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:enabled="false"
                                                                     android:paddingStart="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center"
                      android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/cardViewQuadriOrari"
                                                               app:cardCornerRadius="5dp"
                                                               app:cardBackgroundColor="#6200EE"
                                                               app:contentPadding="10dp"
                                                               android:layout_margin="5dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center"
                                  android:layout_gravity="center">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:src="@drawable/ic_feed_white_24dp"/>
                        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                                               android:layout_height="wrap_content"
                                                                               android:textColor="@color/white"
                                                                               android:singleLine="true"
                                                                               android:text="Quadri orari?"/>

                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <RadioGroup android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/radioGroupQuadriOrari">
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:id="@+id/timeTablesYes"
                                                                                         android:text="Sì"/>
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:text="No"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/cardViewPensilina"
                                                               app:cardCornerRadius="5dp"
                                                               app:cardBackgroundColor="#6200EE"
                                                               app:contentPadding="10dp"
                                                               android:layout_margin="5dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center"
                                  android:layout_gravity="center">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:src="@drawable/ic_home_white_24dp"/>
                        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                                               android:layout_height="wrap_content"
                                                                               android:textColor="@color/white"
                                                                               android:singleLine="true"
                                                                               android:text="Pensilina?"/>

                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <RadioGroup android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/radioGroupPensilina">
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:id="@+id/shelterYes"
                                                                                         android:text="Sì"/>
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:text="No"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/cardViewPalinaAziendale"
                                                           android:gravity="center"
                                                           android:layout_gravity="center"
                                                           app:cardCornerRadius="5dp"
                                                           app:cardBackgroundColor="#6200EE"
                                                           app:contentPadding="10dp"
                                                           android:layout_margin="5dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_gravity="center">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:layout_marginRight="4dp"
                           android:src="@drawable/ic_flag_white_24dp"/>
                <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       android:singleLine="true"
                                                                       android:textColor="@color/white"
                                                                       android:text="Palina aziendale?"/>

            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RadioGroup android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/radioGroupPalina">
                    <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                 android:layout_height="wrap_content"
                                                                                 android:textColor="@color/white"
                                                                                 android:id="@+id/stopSignYes"
                                                                                 android:text="Sì"/>
                    <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                 android:layout_height="wrap_content"
                                                                                 android:textColor="@color/white"
                                                                                 android:text="No"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/linesContainer"
                      android:layout_marginBottom="10pt"
                      android:orientation="vertical">

        </LinearLayout>
        <com.google.android.material.chip.Chip android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:layout_margin="12dp"
                                               android:padding="12dp"
                                               android:text="Aggiungi Linea"
                                               android:id="@+id/addLine"
                                               app:chipIcon="@drawable/ic_add_circle_white_24dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>