<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
                                                       android:id="@+id/cardViewFermataPreferita"
                                                       android:layout_marginTop="10pt"
                                                       android:layout_marginLeft="10pt"
                                                       android:layout_marginRight="10pt"
                                                       android:layout_height="wrap_content">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/fermata_preferita_identifier"
                      android:paddingTop="15pt"
                      android:paddingLeft="15pt"
                      android:textSize="12pt"
                      android:textStyle="bold"/>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_below="@id/fermata_preferita_identifier"
                          android:layout_marginTop="10pt"
                          android:paddingLeft="15pt"
                          android:orientation="horizontal"
                          android:id="@+id/linear_layout_fermata_preferita_posizione">

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/ic_place_white_24dp"
                           android:layout_marginRight="12pt"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/fermata_preferita_posizione"/>
            </LinearLayout>

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_below="@id/linear_layout_fermata_preferita_posizione"
                       android:id="@+id/dettagliFermataPreferita"
                       android:paddingRight="15pt"
                       android:paddingBottom="15pt"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/ic_double_arrow_white_24dp"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>