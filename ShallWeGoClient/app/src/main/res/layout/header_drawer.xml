<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/design_default_color_primary"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView android:layout_width="83dp" android:layout_height="99dp"
               android:id="@+id/logo"
               android:src="@drawable/ic_near_me_white_48dp"
               android:layout_marginBottom="25dp"
               android:paddingRight="10dp"
               android:layout_alignParentRight="true"/>
    <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:id="@+id/usernameGreeter"
              android:paddingLeft="10dp"
              android:textSize="12pt"
              android:textStyle="bold"
              android:text="Benvenuto"/>

    <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:layout_below="@id/usernameGreeter"
                                                           android:paddingLeft="10dp"
                                                           android:textSize="8pt"
                                                           android:layout_marginBottom="10dp"
                                                           android:id="@+id/usernameTextView"/>

    <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/usernameTextView"
              android:id="@+id/karmaGreeter"
              android:paddingLeft="10dp"
              android:textSize="9pt"
              android:textStyle="bold"
              android:text="Il tuo karma:"/>
    <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:layout_below="@id/karmaGreeter"
                                                           android:paddingLeft="10dp"
                                                           android:textSize="7pt"
                                                           android:layout_marginBottom="10dp"
                                                           android:id="@+id/karmaTextView"/>

</RelativeLayout>