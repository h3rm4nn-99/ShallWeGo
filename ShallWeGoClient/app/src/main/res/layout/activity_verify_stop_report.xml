<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerifyStopReport">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:background="#6200EE"
                  android:orientation="horizontal"
                  android:layout_weight="0.20">

        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="0.75">
            <TextView android:layout_width="wrap_content"
                      android:layout_gravity="center"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:textSize="12pt"
                      android:layout_height="wrap_content"
                      android:text="È tutto okay?"
                      android:padding="15dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                      android:gravity="center|end"
                      android:orientation="vertical"
                      android:layout_weight="0.25">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_margin="10dp"
                   android:tag="1"
                   android:onClick="submitVerification"
                   android:id="@+id/yes"
                   android:src="@drawable/ic_arrow_drop_up_white_36dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="10pt"
                      android:id="@+id/counter"
                      android:layout_gravity="center"
                      android:textColor="@color/white"
                      android:text="0"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:tag="-1"
                       android:onClick="submitVerification"
                       android:id="@+id/no"
                       android:layout_margin="10dp"
                       android:src="@drawable/ic_arrow_drop_down_white_36dp"/>


        </LinearLayout>

    </LinearLayout>


    <ScrollView android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.80">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingTop="50dp">

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:startIconDrawable="@drawable/ic_edit_white_24dp"
                                                               android:id="@+id/stopName"
                                                               app:errorEnabled="true"
                                                               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                               android:hint="Nome fermata">

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:enabled="false"
                                                                     android:id="@+id/stopEditText"
                                                                     android:paddingStart="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <org.osmdroid.views.MapView android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_marginHorizontal="50dp"
                                    android:layout_marginBottom="12dp"
                                    android:onClick="goToStreetView"
                                    android:id="@+id/mapPendingReport"/>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center"
                      android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/cardViewQuadriOrari"
                                                               app:cardCornerRadius="5dp"
                                                               app:cardBackgroundColor="#6200EE"
                                                               app:contentPadding="10dp"
                                                               android:layout_margin="5dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center"
                                  android:layout_gravity="center">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:src="@drawable/ic_feed_white_24dp"/>
                        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                                               android:layout_height="wrap_content"
                                                                               android:textColor="@color/white"
                                                                               android:singleLine="true"
                                                                               android:text="Quadri orari?"/>

                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <RadioGroup android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/radioGroupQuadriOrari">
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:id="@+id/timeTablesYes"
                                                                                         android:enabled="false"
                                                                                         android:text="Sì"/>
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:id="@+id/timeTablesNo"
                                                                                         android:enabled="false"
                                                                                         android:text="No"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/cardViewPensilina"
                                                               app:cardCornerRadius="5dp"
                                                               app:cardBackgroundColor="#6200EE"
                                                               app:contentPadding="10dp"
                                                               android:layout_margin="5dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center"
                                  android:layout_gravity="center">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:src="@drawable/ic_home_white_24dp"/>
                        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                                               android:layout_height="wrap_content"
                                                                               android:textColor="@color/white"
                                                                               android:singleLine="true"
                                                                               android:text="Pensilina?"/>

                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <RadioGroup android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/radioGroupPensilina">
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:id="@+id/shelterYes"
                                                                                         android:enabled="false"
                                                                                         android:text="Sì"/>
                            <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                         android:layout_height="wrap_content"
                                                                                         android:textColor="@color/white"
                                                                                         android:id="@+id/shelterNo"
                                                                                         android:enabled="false"
                                                                                         android:text="No"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/cardViewPalinaAziendale"
                                                           android:gravity="center"
                                                           android:layout_gravity="center"
                                                           app:cardCornerRadius="5dp"
                                                           app:cardBackgroundColor="#6200EE"
                                                           app:contentPadding="10dp"
                                                           android:layout_margin="5dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                              android:layout_gravity="center">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:layout_marginRight="4dp"
                               android:src="@drawable/ic_flag_white_24dp"/>
                    <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                                           android:layout_height="wrap_content"
                                                                           android:singleLine="true"
                                                                           android:textColor="@color/white"
                                                                           android:text="Palina aziendale?"/>

                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <RadioGroup android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/radioGroupPalina">
                        <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                     android:layout_height="wrap_content"
                                                                                     android:textColor="@color/white"
                                                                                     android:id="@+id/stopSignYes"
                                                                                     android:enabled="false"
                                                                                     android:text="Sì"/>
                        <com.google.android.material.radiobutton.MaterialRadioButton android:layout_width="wrap_content"
                                                                                     android:layout_height="wrap_content"
                                                                                     android:textColor="@color/white"
                                                                                     android:id="@+id/stopSignNo"
                                                                                     android:enabled="false"
                                                                                     android:text="No"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/linesContainer"
                      android:layout_marginBottom="10pt"
                      android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>