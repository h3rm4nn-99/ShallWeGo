<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.shallwego.client">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_near_me_white_48dp"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.ShallWeGo"
            android:usesCleartextTraffic="true">
        <activity android:name=".VerifyReports">
        </activity>
        <activity android:name=".VerifyCompanyReport">
        </activity>
        <activity android:name=".VerifyLineReport">
        </activity>
        <activity android:name=".VerifyStopReport">
        </activity>
        <activity
                android:name=".TemporaryEventReportActivity"
                android:label="@string/title_activity_temporary_event_report"
                android:theme="@style/Theme.ShallWeGo.NoActionBar">
        </activity>
        <activity
                android:name=".CompanyReportActivity"
                android:label="@string/title_activity_company_report"
                android:theme="@style/Theme.ShallWeGo.NoActionBar">
        </activity>
        <activity
                android:name=".LineReportActivity"
                android:label="@string/title_activity_line_report"
                android:theme="@style/Theme.ShallWeGo.NoActionBar">
        </activity>
        <activity
                android:name=".StopReportActivity"
                android:label="@string/title_activity_scrolling"
                android:theme="@style/Theme.ShallWeGo.NoActionBar">
        </activity>
        <activity android:name=".AlertsNearby">
        </activity>
        <activity
                android:name=".LineDetails"
                android:theme="@style/Theme.ShallWeGoNoBar">
        </activity>
        <activity android:name=".EventDetails">
        </activity>
        <activity android:name=".StopDetails">
        </activity>
        <activity android:name=".FavoriteStops">
        </activity>
        <activity android:name=".MyReportsActivity">
        </activity>
        <activity android:name=".RegisterActivity">
        </activity>
        <activity
                android:name=".LoginActivity"
                android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".IntroSlideShow"
                android:label="Introduzione"
                android:theme="@style/AppIntroStyle"/>
    </application>

</manifest>